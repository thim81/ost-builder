{
  "name": "ost-builder-workspace",
  "private": true,
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@types/node": "^22.16.5",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "npm -w @ost-builder/app run dev",
    "build": "npm -w @ost-builder/app run build",
    "build:app": "npm -w @ost-builder/app run build",
    "build:shared": "npm -w @ost-builder/shared run build",
    "build:cli": "npm -w @ost-builder/shared run build && npm -w ost-builder run build",
    "lint": "npm -w @ost-builder/app run lint",
    "format": "npx prettier --write \"packages/**/*.{tsx,ts,css,md,json}\" --config packages/app/.prettierrc",
    "preview": "npm -w @ost-builder/app run preview",
    "test": "npm -w @ost-builder/app run test",
    "test:watch": "npm -w @ost-builder/app run test:watch"
  }
}
